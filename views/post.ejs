<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= post.title %> | Think in Stats</title>
  <meta name="description" content="<%= post.excerpt || 'Statistical analysis post' %>">
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&family=Lora:wght@400;500&display=swap" rel="stylesheet">
  <!-- Google AdSense -->
  <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-XXXXXXXXXXXXXXXX" crossorigin="anonymous"></script>
  <!-- Social Sharing Meta Tags -->
  <meta property="og:title" content="<%= post.title %> | Think in Stats">
  <meta property="og:description" content="<%= post.excerpt || 'Statistical analysis post' %>">
  <% if (post.file_url && post.file_url.match(/\.(jpg|jpeg|png|gif)$/i)) { %>
    <meta property="og:image" content="<%= post.file_url %>">
  <% } else { %>
    <meta property="og:image" content="/default-post-image.jpg">
  <% } %>
  <meta property="og:url" content="<%= `https://yourdomain.com/post/${post.id}` %>">
  <meta property="og:type" content="article">
  <meta name="twitter:card" content="summary_large_image">
</head>
<body>
  <header>
    <div class="container header-container">
      <a href="/" class="blog-title">
        <i class="fas fa-chart-line"></i> Think in <span>Stats</span>
      </a>
      <button class="mobile-menu-toggle" aria-label="Toggle navigation menu">
        <i class="fas fa-bars"></i>
      </button>
      <nav class="nav-menu">
        <% if (isAdmin) { %>
          <a href="/dashboard"><i class="fas fa-tachometer-alt"></i> <span class="nav-text">Dashboard</span></a>
          <a href="/logout"><i class="fas fa-sign-out-alt"></i> <span class="nav-text">Logout</span></a>
        <% } else { %>
          <a href="/login"><i class="fas fa-sign-in-alt"></i> <span class="nav-text">Login</span></a>
        <% } %>
        <a href="/about"><i class="fas fa-info-circle"></i> <span class="nav-text">About</span></a>
        <a href="https://paypal.me/Studyblume" target="_blank" rel="noopener noreferrer"><i class="fas fa-coffee"></i> <span class="nav-text">Support</span></a>
      </nav>
    </div>
  </header>

  <main class="container">
    <div class="posts-container">
      <div class="main-content">
        <!-- Header Ad Unit -->
        <div class="ad-unit leaderboard">
          <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
          <ins class="adsbygoogle"
               style="display:block"
               data-ad-client="ca-pub-XXXXXXXXXXXXXXXX"
               data-ad-slot="XXXXXXXXXX"
               data-ad-format="auto"
               data-full-width-responsive="true"></ins>
          <script>
               (adsbygoogle = window.adsbygoogle || []).push({});
          </script>
        </div>

        <article class="post-card">
          <% if (post.file_url && post.file_url.match(/\.(jpg|jpeg|png|gif)$/i)) { %>
            <img src="<%= post.file_url %>" alt="<%= post.title %>" class="post-image" loading="lazy">
          <% } else { %>
            <img src="/default-post-image.jpg" alt="Statistical analysis" class="post-image" loading="lazy">
          <% } %>
          <div class="post-content">
            <h1 class="post-title"><%= post.title %></h1>
            <% if (post.topic) { %>
              <div class="post-topic">
                <span class="topic-badge"><%= post.topic %></span>
              </div>
            <% } %>
            <div class="post-meta">
              <span><i class="far fa-calendar-alt"></i> <%= new Date(post.created_at).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
              <span class="reading-time">
                <i class="far fa-clock"></i> <%= post.reading_time || 1 %> min read
              </span>
              <span class="author-name">
                <i class="fas fa-user"></i> Bernard Odhiambo
              </span>
            </div>
            <div class="post-full-content">
              <%- post.content %>
            </div>
            
            <!-- In-content Ad Unit -->
            <div class="ad-unit in-article">
              <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
              <ins class="adsbygoogle"
                   style="display:block; text-align:center;"
                   data-ad-layout="in-article"
                   data-ad-format="fluid"
                   data-ad-client="ca-pub-XXXXXXXXXXXXXXXX"
                   data-ad-slot="XXXXXXXXXX"></ins>
              <script>
                   (adsbygoogle = window.adsbygoogle || []).push({});
              </script>
            </div>
            
            <% if (post.file_url && !post.file_url.match(/\.(jpg|jpeg|png|gif)$/i)) { %>
              <div class="download-section">
                <a href="<%= post.file_url %>" class="btn btn-primary" download>
                  <i class="fas fa-download"></i> Download Dataset
                </a>
              </div>
            <% } %>
            
            <div class="share-buttons">
              <span>Share this analysis:</span>
              <a href="https://twitter.com/intent/tweet?text=<%= encodeURIComponent(post.title) %>&url=<%= encodeURIComponent(`https://yourdomain.com/post/${post.id}`) %>" 
                 class="social-icon twitter" target="_blank" rel="noopener noreferrer" aria-label="Share on Twitter">
                <i class="fab fa-twitter"></i>
              </a>
              <a href="https://www.linkedin.com/shareArticle?mini=true&url=<%= encodeURIComponent(`https://yourdomain.com/post/${post.id}`) %>&title=<%= encodeURIComponent(post.title) %>&summary=<%= encodeURIComponent(post.excerpt || 'Check out this statistical analysis') %>" 
                 class="social-icon linkedin" target="_blank" rel="noopener noreferrer" aria-label="Share on LinkedIn">
                <i class="fab fa-linkedin"></i>
              </a>
              <a href="mailto:?subject=<%= encodeURIComponent(post.title) %>&body=<%= encodeURIComponent(`Check out this post: https://yourdomain.com/post/${post.id}`) %>" 
                 class="social-icon email" aria-label="Share via Email">
                <i class="fas fa-envelope"></i>
              </a>
            </div>
            
            <% if (isAdmin) { %>
              <div class="admin-actions">
                <a href="/edit-post/<%= post.id %>" class="btn btn-secondary">
                  <i class="fas fa-edit"></i> Edit Post
                </a>
                <form action="/delete-post/<%= post.id %>" method="POST" class="inline-form">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this post?')">
                    <i class="fas fa-trash"></i> Delete
                  </button>
                </form>
              </div>
            <% } %>
          </div>
        </article>
        
        <% if (relatedPosts.length > 0) { %>
          <div class="related-posts">
            <h3>More About <%= post.topic %></h3>
            <div class="related-grid">
              <% relatedPosts.forEach(related => { %>
                <div class="related-card">
                  <h4><a href="/post/<%= related.id %>"><%= related.title %></a></h4>
                  <div class="related-meta">
                    <span><%= new Date(related.created_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %></span>
                    <span>Â· <%= Math.max(1, Math.round(related.content.length / 1200)) %> min read</span>
                  </div>
                </div>
              <% }); %>
            </div>
          </div>
        <% } %>
      </div>

      <div class="sidebar">
        <% if (topics.length > 0) { %>
          <div class="sidebar-card">
            <h3 class="sidebar-title">Explore by Topic</h3>
            <div class="topic-cloud">
              <% topics.forEach(topic => { %>
                <a href="/topic/<%= topic.slug %>" class="topic-tag <%= topic.name === post.topic ? 'active' : '' %>"><%= topic.name %></a>
              <% }); %>
            </div>
          </div>
        <% } %>

        <!-- Sidebar Ad Unit -->
        <div class="sidebar-card ad-unit">
          <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
          <ins class="adsbygoogle"
               style="display:block"
               data-ad-client="ca-pub-XXXXXXXXXXXXXXXX"
               data-ad-slot="XXXXXXXXXX"
               data-ad-format="auto"
               data-full-width-responsive="true"></ins>
          <script>
               (adsbygoogle = window.adsbygoogle || []).push({});
          </script>
        </div>
      </div>
    </div>
  </main>

  <footer>
    <div class="container footer-container">
      <div>
        <p>&copy; <%= new Date().getFullYear() %> Think in Stats. All rights reserved.</p>
        <p class="author-credit">Created by Bernard Odhiambo</p>
      </div>
      <div class="social-icons">
        <a href="#" class="social-icon" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
        <a href="#" class="social-icon" aria-label="LinkedIn"><i class="fab fa-linkedin"></i></a>
        <a href="#" class="social-icon" aria-label="GitHub"><i class="fab fa-github"></i></a>
      </div>
    </div>
  </footer>

  <script>
    // Mobile menu toggle functionality
    document.querySelector('.mobile-menu-toggle').addEventListener('click', function() {
      document.querySelector('.nav-menu').classList.toggle('active');
    });

    // Share button analytics (optional)
    document.querySelectorAll('.share-buttons a').forEach(button => {
      button.addEventListener('click', function(e) {
        // You can add analytics tracking here
        console.log('Shared via:', this.classList.contains('twitter') ? 'Twitter' : 
                              this.classList.contains('linkedin') ? 'LinkedIn' : 'Email');
      });
    });
  </script>
</body>
</html>